<h1>タスク一覧</h1>

 <table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>ステータス</th>
      <th>タスク</th>
    </tr>
  </thead>
  <tbody>
 
<% @tasks.each do |task| %>
 
  <tr>
    <td>
<%= link_to task.id, task %>
</td>
        <td>
<%= task.status %>
</td>
        <td>
<%= task.content %>
</td>
   <td>
<%= link_to '編集', edit_task_path(task), class: 'btn btn-default btn-xs' %>
  </td>
        <td>
<%= link_to "削除", task, method: :delete, data: { confirm: "削除しますか?" }, class: 'btn btn-danger btn-xs' %>


     </td>
       </tr>
              
 
<% end %>
 
   </tbody>
  </table>
<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>
